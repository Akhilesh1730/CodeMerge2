<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:background="@drawable/shape_markattendance_buttons_white"
    android:paddingVertical="8dp"
    android:layout_marginVertical="8dp"
    android:weightSum="2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView_item_atteendence_employee_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emp. ID. 1 :"
        android:layout_weight="1"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@+id/textView_item_atteendence_employee_name"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_item_atteendence_employee_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Harshwardhan Patil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />
</LinearLayout>